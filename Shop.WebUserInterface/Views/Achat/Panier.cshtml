@model IEnumerable<Shop.Core.Models.Product>

@{
    ViewBag.Title = "Panier";
}

<h2>Panier</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Prize)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Prize)
            </td>

        </tr>

    }
    <tr>
        <td></td>
        <td></td>
        <td class="text-right"><strong>Total = @Session["Total"]</strong></td>
    </tr>

</table>
